@model WebIssueManagementApp.ViewModel.IssueViewModel

@{
  ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this?</h2>
<div class="mt-3">
  <div>
    <dl class="row">
      <dt class="col-sm-2">
        Code Issue
      </dt>
      <dd class="col-sm-10">
        @Model.UrlIssue
      </dd>
      <dt class="col-sm-2">
        <label asp-for="Server"></label>
      </dt>
      <dd class="col-sm-10">
        @Model.Server
      </dd>
      <dt class="col-sm-2">
        <label asp-for="DataBase"></label>
      </dt>
      <dd class="col-sm-10">
        @Model.DataBase
      </dd>
      <dt class="col-sm-2">
        <label asp-for="DateBegin"></label>
      </dt>
      <dd class="col-sm-10">
        @Model.DateBegin.ToString("dd/MM/yy")
      </dd>
      <dt class="col-sm-2">
        <label asp-for="DateEnd"></label>
      </dt>
      <dd class="col-sm-10">
        @Model.DateEnd?.ToString("dd/MM/yy")
      </dd>
      <dt class="col-sm-2">
        <label asp-for="Abstract"></label>
      </dt>
      <dd class="col-sm-10">
        @Model.Abstract
      </dd>
      <dt class="col-sm-2">
        <label asp-for="Text"></label>
      </dt>
      <dd class="col-sm-10 text-truncate">
        @Model.Text
      </dd>
    </dl>
  </div>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-dark" />
    <a asp-action="Index" class="btn btn-dark">Back</a>
  </form>
</div>
