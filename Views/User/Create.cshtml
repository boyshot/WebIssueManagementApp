@model WebIssueManagementApp.Models.User

@{
    ViewData["Title"] = "Create";
}

<h2>User -> Create</h2>
<hr />

<form asp-action="Create">

    <div class="row mt-3">
        <div class="col-sm-4">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name"class="form-control" placeholder="My Name">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="myemail@myserver.com.br">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <button type="submit" value="Create" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
