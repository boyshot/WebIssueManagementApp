@model WebIssueManagementApp.Models.User

@{
    ViewData["Title"] = "Create";
}

<h2>User -> Create</h2>
<hr />

<form>

    <div class="row mt-3">
        <div class="col-sm-4">
            <label for="inputName" class="form-label">Name</label>
            <input type="text" class="form-control" id="inputName" placeholder="My Name">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="text" class="form-control" id="inputEmail" placeholder="myemail@myserver.com.br">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
